<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.thinkpower.webviewinteraction" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadFromWebActivity"
            android:label="@string/title_activity_load_from_web"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".LoadLocalHtmlActivity"
            android:label="@string/title_activity_load_local_html"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".JavaScriptInteractionActivity"
            android:label="@string/title_activity_java_script_interaction"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
